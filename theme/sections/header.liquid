<div class = "header">
  <div class = "container">
	<div class = "header_left col-md-3">
		<img class="logo"
             src="{{ section.settings.logo_main | img_url: '271x32', crop: 'center' }}"
        >
    </div>
    <div class="header_right col-md-8">
      	<nav class="nav" id="nav">
          <div class= "header-nav">
          {% if section.settings.link.size > 0 %}
           <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
          {% endif %}
          {% if section.settings.link2.size > 0 %}
             <a href="{{ section.settings.link2 }}">{{ section.settings.link2_text }}</a>
          {% endif %}
          {% if section.settings.link3.size > 0 %}
             <a href="{{ section.settings3.link }}">{{ section.settings.link3_text }}</a>
          {% endif %}
          {% if section.settings.link4.size > 0 %}
             <a href="{{ section.settings.link4 }}">{{ section.settings.link4_text }}</a>
          {% endif %}

          {% if section.settings.header_search %}
            <a href="#" class="search">
            <svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path d="M20 18.5787L16.2437 14.8223C17.4619 13.2995 18.2741 11.269 18.2741 9.13706C18.2741 4.06091 14.2132 0 9.13706 0C4.06091 0 0 4.06091 0 9.13706C0 14.2132 4.06091 18.2741 9.13706 18.2741C11.269 18.2741 13.2995 17.5635 14.8223 16.2437L18.5787 20L20 18.5787ZM2.03046 9.13706C2.03046 5.17766 5.17766 2.03046 9.13706 2.03046C13.0964 2.03046 16.2437 5.17766 16.2437 9.13706C16.2437 13.0964 13.0964 16.2437 9.13706 16.2437C5.17766 16.2437 2.03046 13.0964 2.03046 9.13706Z"/>
            </svg>
            </a>
          {% endif %}
    	  </div>
        </nav>

        <button class="nav_toggle" id="nav_toggle" type="button">
          <span class="nav_toggle__item">Menu</span>
        </button>
      
	</div>
    {% if section.settings.header_cart %}
      {%- assign ajax_cart = section.settings.ajax_cart -%}
      {% include 'header-cart' ajax: ajax_cart %}
    {% endif %}
  </div>
</div>

{% schema %}
{
"name": "Header",
"settings": [
  {
    "type": "image_picker",
    "id": "logo_main",
    "label": "Logo image"
  },

  {
    "type": "url",
    "id": "link",
    "label": "Link 1 url"
  },
  {
    "type": "text",
    "id": "link_text",
    "label": "Link 1 text"
  },
  {
    "type": "url",
    "id": "link2",
    "label": "Link 2 url"
  },
  {
    "type": "text",
    "id": "link2_text",
    "label": "Link 2 text"
  },
  {
    "type": "url",
    "id": "link3",
    "label": "Link 3 url"
  },
  {
    "type": "text",
    "id": "link3_text",
    "label": "Link 3 text"
  },
  {
    "type": "url",
    "id": "link4",
    "label": "Link 4 url"
  },
  {
    "type": "text",
    "id": "link4_text",
    "label": "Link 4 text"
  },

  // SEARCH ==========================================================================================
  {
    "type": "header",
    "content": "Search form"
  },
  {
    "type": "checkbox",
    "id": "header_search",
    "label": "Show search form"
  },

  // SHOPPING CART =================================================================================
  {
    "type": "header",
    "content": "Shopping cart"
  },
  {
    "type": "checkbox",
    "id": "header_cart",
    "label": "Show cart"
  },
  {
    "type": "checkbox",
    "id": "ajax_cart",
    "label": "Use ajax cart"
  }
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
$(function() {

	$("#nav_toggle").on("click", function(event) {
		event.preventDefault();

		$(this).toggleClass("active");
		$("#nav").toggleClass("active");
	});

});
{% endjavascript %}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
